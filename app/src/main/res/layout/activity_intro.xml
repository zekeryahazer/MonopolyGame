<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONOPOLY"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#006064"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txtHumanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ä°nsan Oyuncular: 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E65100"/>

        <SeekBar
            android:id="@+id/seekHuman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:max="6"
            android:progress="1"
            android:progressTint="#E65100"
            android:thumbTint="#E65100"/>

        <LinearLayout
            android:id="@+id/namesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/txtBotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yapay Zeka (Bot): 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A237E"/>

        <SeekBar
            android:id="@+id/seekBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            android:max="5"
            android:progress="1"
            android:progressTint="#1A237E"
            android:thumbTint="#1A237E"/>

        <TextView
            android:id="@+id/txtTotalSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toplam: 2 KiÅŸi"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="OYUNA BAÅžLA ðŸš€"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#2E7D32"/>

    </LinearLayout>
</ScrollView>